	/**
	* Chimera template for displaying Archives
	*
	* @package WordPress
	* @subpackage Chimera
	* @since Chimera 1.0
	*/

	get_template_part( 'part-header', 'empty' );

	$args = array(
		'post_parent' => poxy_id(),
		'orderby' => 'menu_order',
		'post_type' => array('page')
	);

	$sections = new WP_Query( $args );
	while ($sections->have_posts()) : $sections->the_post();
		get_template_part('part-link-section');
	endwhile;
	wp_reset_query();
